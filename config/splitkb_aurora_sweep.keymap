        };

        rh_hrmqm: right_positional_hold_tap_questionmark {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "balanced";
            tapping-term-ms = <200>;
            bindings = <&kp>, <&kp>;
            hold-trigger-key-positions = <0 1 2 3 4 10 11 12 13 14 20 21 22 23 24 30 31>;
            hold-trigger-on-release;
        };

        thb_lr: thumb_layer_positional_hold_tap {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "balanced";
            tapping-term-ms = <125>;
            bindings = <&mo>, <&kp>;
        };
    };

    macros {
        slippw: slippw {
            label = "SLIPPW";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <5>;
            tap-ms = <5>;
            bindings
                = <&macro_tap &kp D &kp Y &kp W &kp LS(T) &kp M &kp L &kp M &kp LS(F)>
                ; 
        };

        lmkem: lmkem {
            label = "LMKEMAIL";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <5>;
            tap-ms = <5>;
            bindings
                = <&macro_tap &kp COMMA &kp SPACE &kp L &kp E &kp T &kp SPACE &kp M &kp E &kp SPACE &kp K &kp N &kp O &kp W &kp SPACE &kp I &kp F &kp SPACE &kp Y &kp O &kp U &kp SPACE &kp H &kp A &kp V &kp E &kp SPACE &kp A &kp N &kp Y &kp SPACE &kp Q &kp U &kp E &kp S &kp T &kp I &kp O &kp N &kp S &kp DOT>
                ; 
        };

        bcomthe: bcomthe {
            label = "BComThe";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <5>;
            tap-ms = <5>;
            bindings
                = <&macro_tap &kp T &kp H &kp E>
                ; 
        };

        bcomand: bcomand {
            label = "BComAnd";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <5>;
            tap-ms = <5>;
            bindings
                = <&macro_tap &kp A &kp N &kp D>
                ; 
        };

        bcomyou: bcomyou {
            label = "BComYou";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <5>;
            tap-ms = <5>;
            bindings
                = <&macro_tap &kp Y &kp O &kp U>
                ; 
        };

        bcomthecap: bcomthecap {
            label = "BComTheCap";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <5>;
            tap-ms = <5>;
            bindings
                = <&macro_tap &kp LS(T) &kp H &kp E>
                ; 
        };

        bcomandcap: bcomandcap {
            label = "BComAndCap";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <5>;
            tap-ms = <5>;
            bindings
                = <&macro_tap &kp LS(A) &kp N &kp D>
                ; 
        };

        bcomyoucap: bcomyoucap {
            label = "BComYouCap";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <5>;
            tap-ms = <5>;
            bindings
                = <&macro_tap &kp LS(Y) &kp O &kp U>
                ; 
        };
    };

    combos {            
        compatible = "zmk,combos";
            combo_sliplayer {
            timeout-ms = <20>;
            key-positions = <16 18>;
            layers = ALL_LAYERS; 
            bindings = <&mo SLIP>;
        };  
        
            combo_LMKemail {
            timeout-ms = <500>;
            key-positions = <0 6 32>;
            layers = ALL_LAYERS; 
            bindings = <&lmkem>;
        };  

            combo_BComThe {
            timeout-ms = <200>;
            key-positions = <13 31>;
            layers = ALL_LAYERS; 
            bindings = <&bcomthe>;
        };  

            combo_BComAnd {
            timeout-ms = <200>;
            key-positions = <10 31>;
            layers = ALL_LAYERS; 
            bindings = <&bcomand>;
        };  

            combo_BComYou {
            timeout-ms = <200>;
            key-positions = <8 31>;
            layers = ALL_LAYERS; 
            bindings = <&bcomyou>;
        };  

            combo_BComTheCap {
            timeout-ms = <200>;
            key-positions = <13 16 31>;
            layers = ALL_LAYERS; 
            bindings = <&bcomthecap>;
        };  

            combo_BComAndCap {
            timeout-ms = <200>;
            key-positions = <10 16 31>;
            layers = ALL_LAYERS; 
            bindings = <&bcomandcap>;
        };  

            combo_BComYouCap {
            timeout-ms = <200>;
            key-positions = <8 13 31>;
            layers = ALL_LAYERS; 
            bindings = <&bcomyoucap>;
        };  

            combo_BSPC {
            timeout-ms = <200>;
            key-positions = <12 31>;
            layers = ALL_LAYERS;
            bindings = <&kp BSPC>;
        };  

            combo_excl {
            timeout-ms = <200>;
            key-positions = <0 10>;
