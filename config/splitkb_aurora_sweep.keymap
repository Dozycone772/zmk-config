            bindings = <&pht LC(LA(DEL)) LG(L)>;
        };

            combo_btclear {
            timeout-ms = <200>;
            key-positions = <0 1 2 3>;
            layers = <1>;
            bindings = <&bt BT_CLR>;
        };
          
            combo_outputtoggle {
            timeout-ms = <200>;
            key-positions = <0 1>;
            layers = <1>;
            bindings = <&out OUT_TOG>;
