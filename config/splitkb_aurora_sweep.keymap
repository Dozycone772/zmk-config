            bindings = <&kp EXCL>;
        };  

            combo_atsym {
            timeout-ms = <200>;
            key-positions = <1 11>;
            layers = ALL_LAYERS;
            bindings = <&kp AT>;
        };  

            combo_hash {
            timeout-ms = <200>;
