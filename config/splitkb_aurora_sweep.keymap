            bindings = <&kp ASTRK>;
        };  

            combo_lbrc {
            timeout-ms = <200>;
            key-positions = <8 18>;
            layers = ALL_LAYERS;
            bindings = <&td_mtls>;
        };  

            combo_rbrc {
            timeout-ms = <200>;
            key-positions = <9 19>;
            layers = ALL_LAYERS;
